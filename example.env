# ============================
# Database
# ============================
# Format: postgresql+asyncpg://user:password@host:port/dbname
DATABASE_URL=postgresql+asyncpg://user:password@db:5432/billing

# ============================
# JWT Configuration
# ============================
JWT_SECRET=changeme_secret_key
JWT_ALG=HS256
JWT_ACCESS_EXPIRES_MIN=60
JWT_REFRESH_EXPIRES_MIN=1440

# ============================
# Admin Basic Auth
# ============================
ADMIN_BASIC_USER=admin
ADMIN_BASIC_PASS=admin123

# ============================
# WhatsApp Gateway
# ============================
WA_GATEWAY_URL=http://wa-gateway:8080
WA_TOKEN=your-wa-token

# ============================
# Timezone
# ============================
TIMEZONE=Asia/Jakarta

# ============================
# Auth Config
# ============================
USE_JWT=true
DEFAULT_RESELLER_ID=00000000-0000-0000-0000-000000000000
